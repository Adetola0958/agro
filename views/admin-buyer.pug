include includes/header.pug 
block content 
  link(rel='stylesheet' , href='/stylesheets/style.css')
  body
    div.container.pt-3 
      h4.text-center Buyers
      if noBuyer
        p #{noBuyer}
      if pages
        - let pagePoint = currentPage + 1
        - let pageUrl = "/buyer?page=" + pagePoint
        p.mb-3 Result Page #{pagePoint - 1} of #{pages}
        if currentPage > 1
          - let backPoint = currentPage - 1
          - let backUrl = "/buyer?page=" + backPoint
          a(class="btn btn-danger" href=backurl) Back
        if currentPage != pages
          a(class="btn btn-primary" href=pageUrl) Next
        div(class="col-md table-responsive" style="overflow-x:auto;")
          table.table.table-bordered
            thead
            tr
              th S/N
              th Name
              th Email
              th Action
            tbody
            if buyers
              - let i = skipIt
              each buyer, index in buyers
                - let name = buyer.firstName
                - let email = buyer.email
                - let viewUrl = "/admin/buyer/" + buyer._id
                - i++
                tr
                td #{i}
                td #{name}
                td #{email}
                td #[a(href=viewUrl class="btn btn-success") View Profile]

      div.text-center.justify-content-center.mt-5 
        p
         a(href="/admin/dashboard" class="btn btn-success") Back to home page

    include includes/footer.pug