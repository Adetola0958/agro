include includes/header.pug 
block content
  link(rel='stylesheet' , href='/stylesheets/style.css')
  body
    header(id="header")
      div(class="container")
        div(class='logo float-left')
          a(href="/" class="navbar-brand") AgroHub
        nav(class="menu-custom float-right d-none d-lg-block")
          ul
            li
              a(href="/") Home
            li
              a(href="#") About
            li
              a(href="#") Contact
            li
              a(href="/buyer-signin") Sign in
    section(id="buyer" class="clearfix")
      div(class="intro-container")
        div(class="")
          h3 Welcome To Our Market
          div(class="text-center")              
            a(href="#" class="btn btn-success" data-toggle="modal" data-target="#addFarmer") Join Our Market

          div(id="addFarmer" class="modal fade")
            div(class="modal-dialog" role="document")
              div(class="modal-content")
                div(class="modal-header")
                  h4(class="modal-title") Join Our Market
                  button(type="button" class="close" data-dismiss="modal" aria-label="Close")
                    span(aria-hidden="true") &times;

                div(class="modal-body")
                  form(method="POST")  
                    div(class="row")
                      div(class="col-md-6")
                        input(type="text" class="form-control mb-2" name="firstName" placeholder="First Name")
                      div(class="col-md-6")
                        input(type="text" class="form-control mb-2" name="lastName" placeholder="Last Name")
                      div(class="col-md-6")
                        input(type="text" class="form-control mb-2" name="middleName" placeholder="Middle Name")
                      div(class="col-md-6")
                        input(type="email" class="form-control mb-2" name="email" placeholder="Email")
                      div(class="col-md-6")
                        input(type="password" class="form-control mb-2" name="password" placeholder="Password")
                      div(class="col-md-6")
                        input(type="tel" class="form-control mb-2" name="mobileNumber" placeholder="Mobile Number")
                      div(class="col-md-6")
                        select(class="form-control mb-2" name="gender")
                            option(value="male") Male
                            option(value="female") Female
                      div(class="col-md-6")
                        input(type="text" class="form-control mb-2" name="houseNumber" placeholder="Number")
                      div(class="col-md-6")
                        input(type="text" class="form-control mb-2" name="streetName" placeholder="Address")
                      div(class="col-md-6")
                        input(type="text" class="form-control mb-2" name="lga" placeholder="L.G.A")
                      div(class="col-md-6")
                        input(type="text" class="form-control mb-2" name="state" placeholder="State")
                    div(class="text-center justify-content-center")
                      button(type="submit" class="mt-3 btn btn-primary") Join

    include includes/footer.pug
                  