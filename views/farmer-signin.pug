include includes/header.pug 
block content
  link(rel='stylesheet' , href='/stylesheets/style.css')
  body
    div.container.pt-3 
      div.row 
        div.col-md-4 
        div.col-md-4 
            h2.text-center.justify-content-center Please Sign in to your dashboard
            if error 
                p.text-center.error #{error}
            form(method="POST")
                input(type="email" class="form-control mb-3" name="email" placeholder="Enter your email address")
                input(type="password" class="form-control" name="password" placeholder="Enter your Password")
                div(class="text-center justify-content-center")
                    button(type="submit" class="mt-3 btn btn-primary") Sign in
        div.col-md-4 

  include includes/footer.pug