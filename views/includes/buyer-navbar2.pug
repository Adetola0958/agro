block content
  
  header(class="header")
    div(class="page-brand")
      a(class="link" href="/buyer/dashboard")
        span(class="brand") Agro
          span(class="brand-tip") HUB
        span(class="brand-mini") AH
    div(class="flexbox flex-1")
      ul(class="nav navbar-toolbar")
        li
          a(class="nav-link sidebar-toggler js-sidebar-toggler")
            i(class="ti-menu")
        li
          form(class="navbar-search d-md-block d-none" method="GET" action="GET")
            div(class="rel")
              span(class="search-icon")
                i(class="ti-search")
              input(class="form-control reduce" placeholder="Search here...")
      ul(class="nav navbar-toolbar")
        if buyer 

          li(class="dropdown dropdown-user")
            a(class="nav-link dropdown-toggle link" data-toggle="dropdown")
              img(src="", alt="")
              span #{buyer.firstName}
                i(class="fa fa-angle-down m-l-5")
            ul(class="dropdown-menu dropdown-menu-right")
              a(class="dropdown-item" href="#")
                i(class="fa fa-user") Profile
              a(class="dropdown-item" href="#")
                i(class="fa fa-cog") Settings
              a(class="dropdown-item" href=updateUrl)
                i(class="fa fa-wrench") Update
              li(class="dropdown-divider")
              a(class="dropdown-item" href="/buyer/logout")
                i(class="fa fa-power-off") Logout
              a(class="dropdown-item" href=deleteBut)
                i(class="fa fa-trash") Delete Account